
<h2 id='user-head'><%= @user.fname %> <%= @user.lname %>'s Profile</h2>



<% if session[:user_id] %>
<div id='user-new-post'><a href='/newpost'>Create a new post</a></div>

<% end %>



<% @blogs.all.reverse[0..20].each do |b| %>
<% if b.user_id ===   @user.id %>
<div id='post-container'>
	<div id='title-box'>
		<div id='post-title'><a href="/blogs/<%= b.id %>"><%= b.title%></a>
		</div>
	</div>
<hr id='line-break'>
	<div id='content-box'>
		<div id='post-content'><%= b.content %>
		</div>
	</div>
</div>




<% end %>
<% end %>



